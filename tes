    <script>
        $(document).ready(function() {
            // Toggle status
            $('.toggle-status').click(function() {
                const id = $(this).data('id');
                const currentStatus = $(this).data('status');
                const $statusCell = $(this).closest('tr').find('.status');

                $.ajax({
                    url: 'your_script.php', // Replace with the correct PHP script URL
                    type: 'POST',
                    data: {
                        toggle_status: true,
                        id: id,
                        current_status: currentStatus
                    },
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            const newStatus = currentStatus === 'Aktif' ? 'Tidak Aktif' : 'Aktif';
                            $statusCell.text(newStatus);
                            $('.toggle-status').data('status', newStatus);

                            // SweetAlert success
                            Swal.fire({
                                icon: 'success',
                                title: 'Status updated',
                                text: `Status changed to ${newStatus}`
                            });
                        } else {
                            // SweetAlert error
                            Swal.fire({
                                icon: 'error',
                                title: 'Update failed',
                                text: `Error: ${response.error}`
                            });
                        }
                    },
                    error: function() {
                        // SweetAlert error
                        Swal.fire({
                            icon: 'error',
                            title: 'Request error',
                            text: 'Terjadi kesalahan saat melakukan request.'
                        });
                    }
                });
            });
        });
    </script>

